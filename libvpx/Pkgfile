# Description: VP8/VP9 Codec SDK
# URL:         https://www.webmproject.org/
# Depends on:  yasm

name=libvpx
version=1.16.0
release=1
source="https://github.com/webmproject/$name/archive/v$version/$name-v$version.tar.gz
	link-with-cflags.patch"

build() {
	patch -d $name-$version -p1 -i $SRC/link-with-cflags.patch

	mkdir build; cd build

	export CFLAGS="$CFLAGS -ffat-lto-objects"
	export CXXFLAGS="$CXXFLAGS -ffat-lto-objects"

	../$name-$version/configure \
		--prefix=/usr \
		--enable-vp8 \
		--enable-vp9 \
		--enable-vp9-highbitdepth \
		--enable-vp9-temporal-denoising \
		--enable-runtime-cpu-detect \
		--enable-shared \
		--enable-postproc \
		--enable-pic \
		--disable-unit-tests \
		--disable-install-docs \
		--disable-install-srcs \

	make V=1
	make DIST_DIR="$PKG/usr" install
}

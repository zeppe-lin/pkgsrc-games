# Description: Library for CD-ROM and CD image access
# URL:         http://www.gnu.org/software/libcdio/
# Depends on:  libcddb ncurses

name=libcdio
version=2.3.0
release=1
#source=https://ftp.gnu.org/gnu/$name/$name-$version.tar.bz2
source=https://github.com/$name/$name/releases/download/$version/$name-$version.tar.bz2

build() {
	mkdir build; cd build

	autoreconf -fiv ../$name-$version
	../$name-$version/configure \
		--prefix=/usr \
		--disable-vcd-info \
		--enable-cpp-progs \

	# Ensure --as-needed is applied to shared linker invocations
	sed -i 's/ -shared / -Wl,-O1,--as-needed\0/g' libtool

	make V=1
	make DESTDIR=$PKG install

	# Remove junk
	rm -r $PKG/usr/share/info
}
